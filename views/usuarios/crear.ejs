<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Crear Nuevo Usuario</h1>

  <form action="/usuarios/crear" method="POST" class="max-w-md bg-white p-6 rounded-lg shadow">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2" for="ID_TIPO">Tipo de Usuario</label>
      <select name="ID_TIPO" id="ID_TIPO" required
        class="w-full px-3 py-2 border rounded">
        <% tipos.forEach(tipo => { %>
          <option value="<%= tipo.ID_TIPO %>" 
            <%= (formData && formData.ID_TIPO == tipo.ID_TIPO) ? 'selected' : '' %>>
            <%= tipo.NOMBRE %>
          </option>
        <% }); %>
      </select>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2" for="CODIGOU">Código</label>
      <input type="text" name="CODIGOU" id="CODIGOU" required
        value="<%= formData ? formData.CODIGOU : '' %>"
        class="w-full px-3 py-2 border rounded">
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2" for="EMAIL">Email</label>
      <input type="email" name="EMAIL" id="EMAIL" required
        value="<%= formData ? formData.EMAIL : '' %>"
        class="w-full px-3 py-2 border rounded">
    </div>

    <div class="mb-6">
      <label class="block text-gray-700 mb-2" for="CONTRASEÑA">Contraseña</label>
      <input type="password" name="CONTRASEÑA" id="CONTRASEÑA" required
        class="w-full px-3 py-2 border rounded">
    </div>

    <div class="flex justify-end">
      <a href="/usuarios" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded mr-2">
        Cancelar
      </a>
      <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        Crear Usuario
      </button>
    </div>
  </form>
</div>