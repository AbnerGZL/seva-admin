<%- include('../partials/header', { title: 'Editar Profesor' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-user-edit text-indigo-600"></i> Editar Profesor
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= error %>
      </div>
    <% } %>

    <form action="/profesores/editar/<%= profesor.ID_PROFESOR %>" method="POST" class="space-y-4">
      <div>
        <label for="NOMBRES" class="block text-gray-700 font-medium mb-1">Nombres</label>
        <input type="text" id="NOMBRES" name="NOMBRES" required value="<%= profesor.NOMBRES %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="APELLIDOS" class="block text-gray-700 font-medium mb-1">Apellidos</label>
        <input type="text" id="APELLIDOS" name="APELLIDOS" required value="<%= profesor.APELLIDOS %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="ESPECIALIDAD" class="block text-gray-700 font-medium mb-1">Especialidad</label>
        <input type="text" id="ESPECIALIDAD" name="ESPECIALIDAD" required value="<%= profesor.ESPECIALIDAD %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="TELEFONO" class="block text-gray-700 font-medium mb-1">Tel√©fono</label>
        <input type="text" id="TELEFONO" name="TELEFONO" required value="<%= profesor.TELEFONO %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="DNI" class="block text-gray-700 font-medium mb-1">DNI</label>
        <input type="text" id="DNI" name="DNI" required value="<%= profesor.DNI %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="CORREO" class="block text-gray-700 font-medium mb-1">Correo</label>
        <input type="email" id="CORREO" name="CORREO" required value="<%= profesor.CORREO %>" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div class="flex justify-end mt-6">
        <a href="/profesores" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded mr-2 transition">Cancelar</a>
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded transition">Guardar</button>
      </div>
    </form>
  </div>
</div>
