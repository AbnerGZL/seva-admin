<%- include('../partials/header', { title: 'Registrar Detalle de Nota' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-file-alt text-blue-600"></i> Registrar Detalle de Nota
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <% if (notas.length === 0) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mb-4">
        No hay notas activas disponibles.
      </div>
      <div class="mb-6">
        <a href="/notas/crear" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
          Crear Nueva Nota
        </a>
      </div>
    <% } %>

    <form action="/notadetalle/crear" method="POST" class="space-y-4">
      <!-- Nota -->
      <div>
        <label for="ID_NOTA" class="block text-gray-700 mb-1">Nota</label>
        <select name="ID_NOTA" id="ID_NOTA" required class="w-full px-3 py-2 border border-gray-300 rounded" <%= notas.length === 0 ? 'disabled' : '' %>>
          <% notas.forEach(nota => { %>
            <option value="<%= nota.ID_NOTA %>" <%= formData?.ID_NOTA == nota.ID_NOTA ? 'selected' : '' %>>
              Nota #<%= nota.ID_NOTA %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Práctica -->
      <div>
        <label for="PRACTICA" class="block text-gray-700 mb-1">Práctica</label>
        <input type="number" name="PRACTICA" id="PRACTICA" required step="0.01" min="0"
          value="<%= formData?.PRACTICA || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Teoría -->
      <div>
        <label for="TEORIA" class="block text-gray-700 mb-1">Teoría</label>
        <input type="number" name="TEORIA" id="TEORIA" required step="0.01" min="0"
          value="<%= formData?.TEORIA || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Fecha -->
      <div>
        <label for="FECHA" class="block text-gray-700 mb-1">Fecha</label>
        <input type="date" name="FECHA" id="FECHA" required
          value="<%= formData?.FECHA || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-2 pt-4">
        <a href="/notadetalle" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" <%= notas.length === 0 ? 'disabled' : '' %>>
          Registrar
        </button>
      </div>
    </form>
  </div>
</div>
