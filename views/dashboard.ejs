      <!-- Tipos de Usuario -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">Tipos de Usuario</h2>
        <p class="text-4xl font-bold text-pink-600"><%= totalTipos %></p>
        <a href="/tipos" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>

      <!-- Datos Estudiantes -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">Datos Estudiantes</h2>
        <p class="text-4xl font-bold text-indigo-600"><%= totalDatosEstudiantes %></p>
        <a href="/datos" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>

      <!-- Carreras -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">Carreras</h2>
        <p class="text-4xl font-bold text-red-600"><%= totalCarreras %></p>
        <a href="/carreras" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>
