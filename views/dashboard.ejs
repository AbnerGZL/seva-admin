        <p class="text-4xl font-bold text-blue-600"><%= totalEstudiantes %></p>
        <a href="/estudiantes" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>

      <!-- Cursos -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">Cursos</h2>
        <p class="text-4xl font-bold text-green-600"><%= totalCursos %></p>
        <a href="/cursos" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>

      <!-- Profesores -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">Profesores</h2>
        <p class="text-4xl font-bold text-purple-600"><%= totalProfesores %></p>
        <a href="/profesores" class="text-blue-500 hover:underline mt-4 block">Ver todos</a>
      </div>

      <!-- Usuarios -->
      <div class="bg-white rounded-lg shadow p-6">
