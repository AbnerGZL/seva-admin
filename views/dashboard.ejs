<!DOCTYPE html>
<html lang="es">
<%- include('partials/header.ejs', { title: 'Panel Administración Seva' }) %>
<body class="bg-gray-50 font-sans p-6">
<%- include('partials/navbar.ejs') %>
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
    </div>

    <!-- Contenedor principal en 3 columnas -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-10">
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-xl font-semibold mb-4 text-gray-800">Acciones Rápidas</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
            <a href="/usuarios/crear" class="px-4 py-3 bg-blue-50 hover:bg-blue-100 rounded-lg text-center transition-colors">
              <i class="fas fa-user-plus text-blue-600 mb-2"></i>
              <p class="text-sm font-medium">Nuevo Usuario</p>
            </a>
            <a href="/estudiantes/crear" class="px-4 py-3 bg-green-50 hover:bg-green-100 rounded-lg text-center transition-colors">
              <i class="fas fa-user-graduate text-green-600 mb-2"></i>
              <p class="text-sm font-medium">Nuevo Estudiante</p>
            </a>
            <a href="/cursos/crear" class="px-4 py-3 bg-purple-50 hover:bg-purple-100 rounded-lg text-center transition-colors">
              <i class="fas fa-book text-purple-600 mb-2"></i>
              <p class="text-sm font-medium">Nuevo Curso</p>
            </a>
            <a href="/profesores/crear" class="px-4 py-3 bg-yellow-50 hover:bg-yellow-100 rounded-lg text-center transition-colors">
              <i class="fas fa-chalkboard-teacher text-yellow-600 mb-2"></i>
              <p class="text-sm font-medium">Nuevo Profesor</p>
            </a>
            <a href="/carreras/crear" class="px-4 py-3 bg-red-50 hover:bg-red-100 rounded-lg text-center transition-colors">
              <i class="fas fa-graduation-cap text-red-600 mb-2"></i>
              <p class="text-sm font-medium">Nueva Carrera</p>
            </a>
          </div>
        </div>

        <!-- Sección: Gestión Académica -->
        <div>
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Gestión Académica</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <%- include('partials/tarjeta', { color: 'blue', titulo: 'Estudiantes', total: totalEstudiantes, url: '/estudiantes', icon: 'fa-user-graduate' }) %>
            <%- include('partials/tarjeta', { color: 'purple', titulo: 'Profesores', total: totalProfesores, url: '/profesores', icon: 'fa-chalkboard-teacher' }) %>
            <%- include('partials/tarjeta', { color: 'pink', titulo: 'Carreras', total: totalCarreras, url: '/carreras', icon: 'fa-graduation-cap' }) %>
            <%- include('partials/tarjeta', { color: 'green', titulo: 'Cursos', total: totalCursos, url: '/cursos', icon: 'fa-book' }) %>
          </div>
        </div>

        <!-- Sección: Administración -->
        <div>
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Administración</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <%- include('partials/tarjeta', { color: 'yellow', titulo: 'Usuarios', total: totalUsuarios, url: '/usuarios', icon: 'fa-user' }) %>
            <%- include('partials/tarjeta', { color: 'indigo', titulo: 'Tipos Usuario', total: totalTipos, url: '/tipos', icon: 'fa-users-cog' }) %>
          </div>
        </div>

        <!-- Sección: Notas y Control -->
        <div>
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Notas y Control</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <%- include('partials/tarjeta', { color: 'gray', titulo: 'Matrículas', total: totalMatriculas, url: '/matriculas', icon: 'fa-clipboard-list' }) %>
            <%- include('partials/tarjeta', { color: 'red', titulo: 'Notas', total: totalNotas, url: '/notas', icon: 'fa-file-alt' }) %>
            <%- include('partials/tarjeta', { color: 'emerald', titulo: 'Notas Detalle', total: totalNotaDetalles, url: '/notadetalle', icon: 'fa-file-signature' }) %>
            <%- include('partials/tarjeta', { color: 'teal', titulo: 'Pagos', total: totalPagos, url: '/pagos', icon: 'fa-dollar-sign' }) %>
            <%- include('partials/tarjeta', { color: 'orange', titulo: 'Asistencias', total: totalAsistencias, url: '/asistencias', icon: 'fa-calendar-check' }) %>
          </div>
        </div>
      </div>

      <!-- Columna derecha: Actividad Reciente -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow p-6 h-full">
          <h3 class="text-xl font-semibold mb-4 text-gray-800">Actividad Reciente</h3>
          <div class="space-y-3">
            <div class="activity-item pl-4 py-3 border-l-blue-500">
              <p class="font-medium">Nuevo estudiante registrado</p>
              <p class="text-sm text-gray-500">Hace 15 minutos</p>
            </div>
            <div class="activity-item pl-4 py-3 border-l-green-500">
              <p class="font-medium">Curso de Matemáticas actualizado</p>
              <p class="text-sm text-gray-500">Hace 1 hora</p>
            </div>
            <div class="activity-item pl-4 py-3 border-l-purple-500">
              <p class="font-medium">Nuevo profesor asignado</p>
              <p class="text-sm text-gray-500">Hace 3 horas</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
</html>