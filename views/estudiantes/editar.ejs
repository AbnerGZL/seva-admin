<%- include('../partials/header', { title: 'Editar Estudiante' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-user-edit text-blue-600"></i> Editar Estudiante
    </h1>

    <form action="/estudiantes/editar/<%= estudiante.ID_ESTUDIANTE %>" method="POST" class="space-y-4">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= error %>
        </div>
      <% } %>

      <div>
        <label for="NOMBRES" class="block text-gray-700 mb-1">Nombres</label>
        <input type="text" id="NOMBRES" name="NOMBRES" value="<%= estudiante.NOMBRES %>" required
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <div>
        <label for="APELLIDOS" class="block text-gray-700 mb-1">Apellidos</label>
        <input type="text" id="APELLIDOS" name="APELLIDOS" value="<%= estudiante.APELLIDOS %>" required
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <div>
        <label for="DNI" class="block text-gray-700 mb-1">DNI</label>
        <input type="text" id="DNI" name="DNI" value="<%= estudiante.DNI %>" required
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <div>
        <label for="CARRERA" class="block text-gray-700 mb-1">Carrera</label>
        <select id="CARRERA" name="CARRERA" required class="w-full px-3 py-2 border border-gray-300 rounded">
          <option value="" disabled <%= !estudiante.CARRERA ? 'selected' : '' %>>Seleccione una carrera</option>
          <% carreras.forEach(carrera => { %>
            <option value="<%= carrera.NOMBRE %>" 
              <%= estudiante.CARRERA === carrera.NOMBRE ? 'selected' : '' %>>
              <%= carrera.NOMBRE %>
            </option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="CORREO" class="block text-gray-700 mb-1">Correo</label>
        <input type="email" id="CORREO" name="CORREO" value="<%= estudiante.CORREO %>" required
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <div>
        <label for="ESTADO" class="block text-gray-700 mb-1">Estado</label>
        <select id="ESTADO" name="ESTADO" required class="w-full px-3 py-2 border border-gray-300 rounded">
          <option value="ESTUDIANTE" <%= estudiante.ESTADO === 'ESTUDIANTE' ? 'selected' : '' %>>ESTUDIANTE</option>
          <option value="EGRESADO" <%= estudiante.ESTADO === 'EGRESADO' ? 'selected' : '' %>>EGRESADO</option>
        </select>
      </div>

      <div class="flex justify-end space-x-2 pt-4">
        <a href="/estudiantes" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>
