<%- include('../partials/header', { title: 'Editar Carrera' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-edit text-yellow-500"></i> Editar Carrera
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= error %>
      </div>
    <% } %>

    <form action="/carreras/editar/<%= carrera.ID_CARRERA %>" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-700 mb-1">Nombre</label>
        <input name="NOMBRE" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.NOMBRE %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Código</label>
        <input name="CODIGOCA" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.CODIGOCA %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Descripción</label>
        <input name="DESCRIPCION" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.DESCRIPCION %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Duración (semestres)</label>
        <input name="DURACION" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.DURACION %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Total Créditos</label>
        <input name="TOTAL_CREDITOS" type="number" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.TOTAL_CREDITOS %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Título</label>
        <input name="TITULO" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.TITULO %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Grado</label>
        <input name="GRADO" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.GRADO %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Departamento</label>
        <input name="DEPARTAMENTO" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-yellow-500" value="<%= carrera.DEPARTAMENTO %>">
      </div>

      <div>
        <label class="block text-gray-700 mb-1">Modalidad</label>
        <select name="MODALIDAD" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
          <option value="" disabled <%= !formData?.MODALIDAD ? 'selected' : '' %>>Seleccione una modalidad</option>
          <option value="PRESENCIAL" <%= formData?.MODALIDAD === 'PRESENCIAL' ? 'selected' : '' %>>PRESENCIAL</option>
          <option value="HIBRIDO" <%= formData?.MODALIDAD === 'HIBRIDO' ? 'selected' : '' %>>HIBRIDO</option>
          <option value="VIRTUAL" <%= formData?.MODALIDAD === 'VIRTUAL' ? 'selected' : '' %>>VIRTUAL</option>
        </select>
      </div>

      <div class="flex justify-end pt-4">
        <a href="/carreras" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded mr-2 transition">
          Cancelar
        </a>
        <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded transition">
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>
