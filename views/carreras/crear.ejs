<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Registrar Carrera</h1>

  <form action="/carreras/crear" method="POST" class="bg-white p-6 rounded-lg shadow max-w-lg">
    <% if (error) { %>
      <div class="text-red-500 mb-4"><%= error %></div>
    <% } %>

    <div class="mb-4"><label>Nombre</label><input name="NOMBRE" required class="w-full border px-3 py-2 rounded" value="<%= formData?.NOMBRE || '' %>"></div>
    <div class="mb-4"><label>Código</label><input name="CODIGOCA" required class="w-full border px-3 py-2 rounded" value="<%= formData?.CODIGOCA || '' %>"></div>
    <div class="mb-4"><label>Descripción</label><input name="DESCRIPCION" required class="w-full border px-3 py-2 rounded" value="<%= formData?.DESCRIPCION || '' %>"></div>
    <div class="mb-4"><label>Duración</label><input name="DURACION" required class="w-full border px-3 py-2 rounded" value="<%= formData?.DURACION || '' %>"></div>
    <div class="mb-4"><label>Total Créditos</label><input name="TOTAL_CREDITOS" type="number" required class="w-full border px-3 py-2 rounded" value="<%= formData?.TOTAL_CREDITOS || '' %>"></div>
    <div class="mb-4"><label>Título</label><input name="TITULO" required class="w-full border px-3 py-2 rounded" value="<%= formData?.TITULO || '' %>"></div>
    <div class="mb-4"><label>Grado</label><input name="GRADO" required class="w-full border px-3 py-2 rounded" value="<%= formData?.GRADO || '' %>"></div>
    <div class="mb-4"><label>Departamento</label><input name="DEPARTAMENTO" required class="w-full border px-3 py-2 rounded" value="<%= formData?.DEPARTAMENTO || '' %>"></div>
    <div class="mb-4"><label>Modalidad</label><input name="MODALIDAD" required class="w-full border px-3 py-2 rounded" value="<%= formData?.MODALIDAD || '' %>"></div>

    <div class="flex justify-end">
      <a href="/carreras" class="bg-gray-500 text-white px-4 py-2 rounded mr-2">Cancelar</a>
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Registrar</button>
    </div>
  </form>
</div>
