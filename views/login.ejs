<%- include('partials/header', { title: 'Iniciar Sesión' }) %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-200 px-4">
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-2xl">
    <div class="mb-6 text-center">
      <h1 class="text-3xl font-extrabold text-blue-700 mb-2 flex items-center justify-center gap-2">
        <i class="fas fa-user-circle"></i> Iniciar Sesión
      </h1>
      <p class="text-gray-600 text-sm">Accede al panel administrativo</p>
    </div>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-5 text-sm">
        <%= error %>
      </div>
    <% } %>

    <form action="/login" method="POST" class="space-y-6">
      <div class="flex flex-col items-center">
        <label for="EMAIL" class="block text-sm font-medium text-gray-700 mb-1 w-full">Correo Electrónico</label>
        <input type="email" id="EMAIL" name="EMAIL"
               class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-300 focus:outline-none text-center"
               placeholder="ejemplo@correo.com" required>
      </div>

      <div class="flex flex-col items-center">
        <label for="CONTRASEÑA" class="block text-sm font-medium text-gray-700 mb-1 w-full">Contraseña</label>
        <input type="password" id="CONTRASEÑA" name="CONTRASEÑA"
               class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-300 focus:outline-none text-center"
               placeholder="********" required>
      </div>

      <div class="flex justify-center pt-4">
        <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 transition text-white font-semibold px-6 py-2 rounded-lg shadow-md w-full">
          Iniciar Sesión
        </button>
      </div>
    </form>
  </div>
</div>
