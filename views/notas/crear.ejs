<%- include('../partials/header', { title: 'Registrar Nota' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-file-alt text-blue-600"></i> Registrar Nota
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <% if (matriculas.length === 0) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mb-4">
        No hay matrículas activas disponibles.
      </div>
      <div class="mb-6">
        <a href="/matriculas/crear" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
          Crear Nueva Matrícula
        </a>
      </div>
    <% } %>

    <% if (cursos.length === 0) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mb-4">
        No hay cursos activos disponibles.
      </div>
      <div class="mb-6">
        <a href="/cursos/crear" class="inline-block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded transition">
          Crear Nuevo Curso
        </a>
      </div>
    <% } %>

    <form action="/notas/crear" method="POST" class="space-y-4">
      <!-- Matrícula -->
    <div>
      <label for="ID_MATRICULA" class="block text-gray-700 mb-1">Estudiante</label>
      <select name="ID_MATRICULA" id="ID_MATRICULA" required class="w-full px-3 py-2 border border-gray-300 rounded" <%= matriculas.length === 0 ? 'disabled' : '' %>>
        <% matriculas.forEach(m => { %>
          <option value="<%= m.ID_MATRICULA %>" <%= formData?.ID_MATRICULA == m.ID_MATRICULA ? 'selected' : '' %>>
            <%= m.estudiante?.NOMBRES %> <%= m.estudiante?.APELLIDOS %> - <%= m.carrera?.NOMBRE %>
          </option>
        <% }) %>
      </select>
    </div>

      <!-- Curso -->
      <div>
        <label for="ID_CURSO" class="block text-gray-700 mb-1">Curso</label>
        <select name="ID_CURSO" id="ID_CURSO" required class="w-full px-3 py-2 border border-gray-300 rounded" <%= cursos.length === 0 ? 'disabled' : '' %>>
          <% cursos.forEach(c => { %>
            <option value="<%= c.ID_CURSO %>" <%= formData?.ID_CURSO == c.ID_CURSO ? 'selected' : '' %>>
              <%= c.NOMBRE %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Promedio Parcial -->
      <div>
        <label for="PROMEDIOP" class="block text-gray-700 mb-1">Promedio Parcial</label>
        <input type="number" step="0.01" name="PROMEDIOP" id="PROMEDIOP" required
          value="<%= formData?.PROMEDIOP || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Promedio Total -->
      <div>
        <label for="PROMEDIOT" class="block text-gray-700 mb-1">Promedio Teoría</label>
        <input type="number" step="0.01" name="PROMEDIOT" id="PROMEDIOT" required
          value="<%= formData?.PROMEDIOT || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Condición -->
      <div>
        <label for="CONDICION" class="block text-gray-700 mb-1">Condición</label>
        <input type="text" name="CONDICION" id="CONDICION" required
          value="<%= formData?.CONDICION || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-2 pt-4">
        <a href="/notas" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" <%= matriculas.length === 0 || cursos.length === 0 ? 'disabled' : '' %>>
          Guardar Nota
        </button>
      </div>
    </form>
  </div>
</div>
