<%- include('../partials/header', { title: 'Registrar Nota' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-file-alt text-blue-600"></i> Registrar Nota
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <% if (cronogramas.length === 0) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mb-4">
        No hay cronogramas activos disponibles.
      </div>
      <div class="mb-6">
        <a href="/cronogramas/crear" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
          Crear Cronograma
        </a>
      </div>
    <% } %>

    <form action="/notas/crear" method="POST" class="space-y-4">
      <!-- Cronograma -->
      <div>
        <p class="text-gray-600 text-sm mb-1">Seleccione un cronograma:</p>
        <label for="ID_CRONOGRAMA" class="block text-gray-700 mb-1 font-medium">
          Estudiante - Carrera - Ciclo - Profesor
        </label>
        <select name="ID_CRONOGRAMA" id="ID_CRONOGRAMA" required class="w-full px-3 py-2 border border-gray-300 rounded" <%= cronogramas.length === 0 ? 'disabled' : '' %>>
          <% cronogramas.forEach(c => { %>
            <option 
              value="<%= c.ID_CRONOGRAMA %>" 
              data-curso-id="<%= c.curso?.ID_CURSO %>"
              <%= formData?.ID_CRONOGRAMA == c.ID_CRONOGRAMA ? 'selected' : '' %>>
              <%= c.matricula?.estudiante?.NOMBRES %> <%= c.matricula?.estudiante?.APELLIDOS %> - 
              <%= c.matricula?.carrera?.NOMBRE %> - Ciclo <%= c.matricula?.CICLO %> - 
              Prof. <%= c.profesor?.NOMBRES %> <%= c.profesor?.APELLIDOS %> (Cursación: <%= c.CURSACION %>)
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Curso (Autocompletado y bloqueado) -->
      <div>
        <label for="ID_CURSO_VISIBLE" class="block text-gray-700 mb-1">Curso</label>
        <!-- Select visible pero deshabilitado -->
        <select id="ID_CURSO_VISIBLE" disabled class="w-full px-3 py-2 border border-gray-300 rounded bg-gray-100">
          <option value="">Seleccione un curso</option>
          <% cursos.forEach(c => { %>
            <option value="<%= c.ID_CURSO %>" <%= formData?.ID_CURSO == c.ID_CURSO ? 'selected' : '' %>>
              <%= c.NOMBRE %>
            </option>
          <% }) %>
        </select>

        <!-- Campo oculto para enviar al backend -->
        <input type="hidden" name="ID_CURSO" id="ID_CURSO" value="<%= formData?.ID_CURSO || '' %>">
      </div>

      <!-- Promedio Práctica -->
      <div>
        <label for="PROMEDIOP" class="block text-gray-700 mb-1">Promedio Práctica</label>
        <input type="number" step="0.01" name="PROMEDIOP" id="PROMEDIOP" required
          value="<%= formData?.PROMEDIOP || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Promedio Teoría -->
      <div>
        <label for="PROMEDIOT" class="block text-gray-700 mb-1">Promedio Teoría</label>
        <input type="number" step="0.01" name="PROMEDIOT" id="PROMEDIOT" required
          value="<%= formData?.PROMEDIOT || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Unidad -->
      <div>
        <label for="UNIDAD" class="block text-gray-700 mb-1">Unidad</label>
        <input type="text" name="UNIDAD" id="UNIDAD" required
          value="<%= formData?.UNIDAD || '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-2 pt-4">
        <a href="/notas" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" <%= cronogramas.length === 0 ? 'disabled' : '' %>>
          Guardar Nota
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Script para autocompletar curso -->
<script>
  document.getElementById('ID_CRONOGRAMA').addEventListener('change', function () {
    const selectedOption = this.options[this.selectedIndex];
    const cursoId = selectedOption.getAttribute('data-curso-id');
    if (cursoId) {
      document.getElementById('ID_CURSO').value = cursoId;
      const cursoVisible = document.getElementById('ID_CURSO_VISIBLE');
      if (cursoVisible) cursoVisible.value = cursoId;
    }
  });

  window.addEventListener('DOMContentLoaded', () => {
    const selected = document.querySelector('#ID_CRONOGRAMA option:checked');
    if (selected) {
      const cursoId = selected.getAttribute('data-curso-id');
      if (cursoId) {
        document.getElementById('ID_CURSO').value = cursoId;
        const cursoVisible = document.getElementById('ID_CURSO_VISIBLE');
        if (cursoVisible) cursoVisible.value = cursoId;
      }
    }
  });
</script>
