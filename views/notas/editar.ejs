<%- include('../partials/header', { title: 'Editar Nota' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-pen-square text-blue-600"></i> Editar Nota
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <form action="/notas/editar/<%= nota.ID_NOTA %>" method="POST" class="space-y-4">

      <!-- Matrícula -->
      <div>
        <label for="ID_MATRICULA" class="block text-gray-700 mb-1">Matrícula</label>
        <select name="ID_MATRICULA" id="ID_MATRICULA" required class="w-full px-3 py-2 border border-gray-300 rounded">
          <% matriculas.forEach(m => { %>
            <option value="<%= m.ID_MATRICULA %>" <%= nota.ID_MATRICULA == m.ID_MATRICULA ? 'selected' : '' %>>
              Matrícula #<%= m.ID_MATRICULA %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Curso -->
      <div>
        <label for="ID_CURSO" class="block text-gray-700 mb-1">Curso</label>
        <select name="ID_CURSO" id="ID_CURSO" required class="w-full px-3 py-2 border border-gray-300 rounded">
          <% cursos.forEach(c => { %>
            <option value="<%= c.ID_CURSO %>" <%= nota.ID_CURSO == c.ID_CURSO ? 'selected' : '' %>>
              <%= c.NOMBRE %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Promedio Parcial -->
      <div>
        <label for="PROMEDIOP" class="block text-gray-700 mb-1">Promedio Parcial</label>
        <input type="number" step="0.01" name="PROMEDIOP" id="PROMEDIOP" required
          value="<%= nota.PROMEDIOP %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Promedio Total -->
      <div>
        <label for="PROMEDIOT" class="block text-gray-700 mb-1">Promedio Teoria</label>
        <input type="number" step="0.01" name="PROMEDIOT" id="PROMEDIOT" required
          value="<%= nota.PROMEDIOT %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Condición -->
      <div>
        <label for="CONDICION" class="block text-gray-700 mb-1">Condición</label>
        <input type="text" name="CONDICION" id="CONDICION" required
          value="<%= nota.CONDICION %>"
          class="w-full px-3 py-2 border border-gray-300 rounded">
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-2 pt-4">
        <a href="/notas" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
          Guardar Cambios
        </button>
      </div>

    </form>
  </div>
</div>
