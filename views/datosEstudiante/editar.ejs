<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Editar Datos del Estudiante</h1>

  <form action="/datos/editar/<%= dato.ID_DATOS_ESTUDIANTE %>" method="POST" class="max-w-md bg-white p-6 rounded-lg shadow">
    <% if (error) { %>
      <div class="text-red-500 mb-4"><%= error %></div>
    <% } %>

    <div class="mb-4">
      <label class="block mb-1">Estudiante</label>
      <select name="ID_ESTUDIANTE" required class="w-full px-3 py-2 border rounded">
        <% estudiantes.forEach(est => { %>
          <option value="<%= est.ID_ESTUDIANTE %>" <%= dato.ID_ESTUDIANTE == est.ID_ESTUDIANTE ? 'selected' : '' %>>
            <%= est.NOMBRES %> <%= est.APELLIDOS %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-4">
      <label class="block mb-1">DNI</label>
      <input type="number" name="DNI" required class="w-full px-3 py-2 border rounded"
        value="<%= dato.DNI %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Fecha de Nacimiento</label>
      <input type="date" name="FECHA_NAC" required class="w-full px-3 py-2 border rounded"
        value="<%= dato.FECHA_NAC %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Sexo</label>
      <select name="SEXO" required class="w-full px-3 py-2 border rounded">
        <option value="Masculino" <%= dato.SEXO === 'Masculino' ? 'selected' : '' %>>Masculino</option>
        <option value="Femenino" <%= dato.SEXO === 'Femenino' ? 'selected' : '' %>>Femenino</option>
        <option value="Otro" <%= dato.SEXO === 'Otro' ? 'selected' : '' %>>Otro</option>
      </select>
    </div>

    <div class="mb-4">
      <label class="block mb-1">Dirección</label>
      <input type="text" name="DIRECCION" required class="w-full px-3 py-2 border rounded"
        value="<%= dato.DIRECCION %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Teléfono</label>
      <input type="text" name="TELEFONO" required class="w-full px-3 py-2 border rounded"
        value="<%= dato.TELEFONO %>">
    </div>

    <div class="mb-6">
      <label class="block mb-1">Email</label>
      <input type="email" name="EMAIL" class="w-full px-3 py-2 border rounded"
        value="<%= dato.EMAIL %>">
    </div>

    <div class="flex justify-end">
      <a href="/datos" class="bg-gray-500 text-white px-4 py-2 rounded mr-2">Cancelar</a>
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Guardar Cambios</button>
    </div>
  </form>
</div>
