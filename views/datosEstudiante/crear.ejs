<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Registrar Datos del Estudiante</h1>

  <form action="/datos/crear" method="POST" class="max-w-md bg-white p-6 rounded-lg shadow">
    <% if (error) { %>
      <div class="text-red-500 mb-4"><%= error %></div>
    <% } %>

    <div class="mb-4">
      <label class="block mb-1">Estudiante</label>
      <select name="ID_ESTUDIANTE" id="ID_ESTUDIANTE" required class="w-full px-3 py-2 border rounded" onchange="autocompletarCorreo()">
        <% estudiantes.forEach(est => { %>
          <option 
              value="<%= est.ID_ESTUDIANTE %>" 
              data-correo="<%= est.CORREO %>" 
              data-dni="<%= est.DNI %>"
              <%= formData?.ID_ESTUDIANTE == est.ID_ESTUDIANTE ? 'selected' : '' %>>
              <%= est.NOMBRES %> <%= est.APELLIDOS %>
            </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-4">
      <label class="block mb-1">DNI</label>
        <input type="number" id="DNI" name="DNI" required class="w-full px-3 py-2 border rounded"
          value="<%= formData?.DNI || '' %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Fecha de Nacimiento</label>
      <input type="date" name="FECHA_NAC" required class="w-full px-3 py-2 border rounded"
        value="<%= formData?.FECHA_NAC || '' %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Sexo</label>
      <select name="SEXO" required class="w-full px-3 py-2 border rounded">
        <option value="">Seleccione</option>
        <option value="Masculino" <%= formData?.SEXO === 'Masculino' ? 'selected' : '' %>>Masculino</option>
        <option value="Femenino" <%= formData?.SEXO === 'Femenino' ? 'selected' : '' %>>Femenino</option>
        <option value="Otro" <%= formData?.SEXO === 'Otro' ? 'selected' : '' %>>Otro</option>
      </select>
    </div>

    <div class="mb-4">
      <label class="block mb-1">Dirección</label>
      <input type="text" name="DIRECCION" required class="w-full px-3 py-2 border rounded"
        value="<%= formData?.DIRECCION || '' %>">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Teléfono</label>
      <input type="text" name="TELEFONO" required class="w-full px-3 py-2 border rounded"
        value="<%= formData?.TELEFONO || '' %>">
    </div>

    <div class="mb-6">
      <label class="block mb-1">Email</label>
      <input type="email" id="EMAIL" name="EMAIL" class="w-full px-3 py-2 border rounded"
        value="<%= formData?.EMAIL || '' %>" readonly>
    </div>

    <div class="flex justify-end">
      <a href="/datos" class="bg-gray-500 text-white px-4 py-2 rounded mr-2">Cancelar</a>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Registrar</button>
    </div>
  </form>
</div>
<script>
  function autocompletarCorreo() {
    const select = document.getElementById('ID_ESTUDIANTE');
    const emailInput = document.getElementById('EMAIL');
    const selectedOption = select.options[select.selectedIndex];
    const correo = selectedOption.getAttribute('data-correo');
    emailInput.value = correo || '';
  }

  function autocompletarDni(){
    const select = document.getElementById('ID_ESTUDIANTE');
    const dniInput = document.getElementById('DNI');
    const selectedOption = select.options[select.selectedIndex];
    const dni = selectedOption.getAttribute('data-dni');
    dniInput.value = dni || '';
  }

  window.addEventListener('DOMContentLoaded', autocompletarCorreo);
  window.addEventListener('DOMContentLoaded', autocompletarDni);
</script>

