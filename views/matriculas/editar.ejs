<%- include('../partials/header', { title: 'Editar Matrícula' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-user-edit text-blue-600"></i> Editar Matrícula
    </h1>

    <form action="/matriculas/editar/<%= matricula.ID_MATRICULA %>" method="POST" class="space-y-4">
      <% if (error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= error %>
        </div>
      <% } %>

      <!-- Estudiante -->
      <div>
        <label for="ID_ESTUDIANTE" class="block text-gray-700 mb-1">Estudiante</label>
        <select name="ID_ESTUDIANTE" id="ID_ESTUDIANTE" required class="w-full px-3 py-2 border rounded">
          <% estudiantes.forEach(est => { %>
            <option value="<%= est.ID_ESTUDIANTE %>" <%= matricula.ID_ESTUDIANTE == est.ID_ESTUDIANTE ? 'selected' : '' %>>
              <%= est.NOMBRES %> <%= est.APELLIDOS %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Condición -->
      <div>
        <label for="CONDICION" class="block text-gray-700 mb-1">Condición</label>
        <select name="CONDICION" id="CONDICION" class="w-full px-3 py-2 border rounded">
          <option value="" <%= !matricula.CONDICION ? 'selected' : '' %>>-- Seleccionar (opcional) --</option>
          <option value="Aprobado" <%= matricula.CONDICION === 'Aprobado' ? 'selected' : '' %>>Aprobado</option>
          <option value="Desaprobado" <%= matricula.CONDICION === 'Desaprobado' ? 'selected' : '' %>>Desaprobado</option>
        </select>
      </div>

      <!-- Carrera -->
      <div>
        <label for="ID_CARRERA" class="block text-gray-700 mb-1">Carrera</label>
        <select name="ID_CARRERA" id="ID_CARRERA" required class="w-full px-3 py-2 border rounded">
          <% carreras.forEach(car => { %>
            <option value="<%= car.ID_CARRERA %>" <%= matricula.ID_CARRERA == car.ID_CARRERA ? 'selected' : '' %>>
              <%= car.NOMBRE %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Fecha -->
      <div>
        <label for="FECHA_MATRICULA" class="block text-gray-700 mb-1">Fecha de Matrícula</label>
        <input type="date" name="FECHA_MATRICULA" id="FECHA_MATRICULA" required
          value="<%= matricula.FECHA_MATRICULA %>" class="w-full px-3 py-2 border rounded">
      </div>

      <!-- Estado -->
      <div>
        <label for="ESTADO" class="block text-gray-700 mb-1">Estado</label>
        <input type="text" name="ESTADO" id="ESTADO" required
          value="<%= matricula.ESTADO %>" class="w-full px-3 py-2 border rounded">
      </div>

      <!-- Periodo Académico -->
      <div>
        <label for="PERIODOA" class="block text-gray-700 mb-1">Periodo Académico</label>
        <input type="text" name="PERIODOA" id="PERIODOA" required
          value="<%= matricula.PERIODOA %>" class="w-full px-3 py-2 border rounded">
      </div>

      <!-- Ciclo -->
      <div>
        <label for="CICLO" class="block text-gray-700 mb-1">Ciclo</label>
        <input type="number" name="CICLO" id="CICLO" required
          value="<%= matricula.CICLO %>" class="w-full px-3 py-2 border rounded">
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-2 pt-4">
        <a href="/matriculas" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
          Cancelar
        </a>
        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>
