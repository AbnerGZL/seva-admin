<%- include('../partials/header', { title: 'Registrar Asistencia' }) %>
<%- include('../partials/navbar') %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-calendar-plus text-green-600"></i> Registrar Asistencia
    </h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= error %>
      </div>
    <% } %>

    <% if (matriculas.length === 0 || profesores.length === 0 || cursos.length === 0) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded mb-6">
        Debe registrar al menos una <strong>Matrícula</strong>, <strong>Profesor</strong> y <strong>Curso</strong> antes de continuar.
        <div class="mt-2 space-x-2">
          <% if (matriculas.length === 0) { %>
            <a href="/matriculas/crear" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded">Crear Matrícula</a>
          <% } %>
          <% if (profesores.length === 0) { %>
            <a href="/profesores/crear" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded">Crear Profesor</a>
          <% } %>
          <% if (cursos.length === 0) { %>
            <a href="/cursos/crear" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded">Crear Curso</a>
          <% } %>
        </div>
      </div>
    <% } %>

    <form action="/asistencias/crear" method="POST" class="space-y-4">
      <!-- Matrícula -->
      <div>
        <label class="block text-gray-700 mb-1">Matrícula</label>
        <select name="ID_MATRICULA" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-500">
          <% matriculas.forEach(m => { %>
            <option value="<%= m.ID_MATRICULA %>" <%= formData?.ID_MATRICULA == m.ID_MATRICULA ? 'selected' : '' %>>
              Matrícula #<%= m.ID_MATRICULA %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Profesor -->
      <div>
        <label class="block text-gray-700 mb-1">Profesor</label>
        <select name="ID_PROFESOR" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-500">
          <% profesores.forEach(p => { %>
            <option value="<%= p.ID_PROFESOR %>" <%= formData?.ID_PROFESOR == p.ID_PROFESOR ? 'selected' : '' %>>
              <%= p.NOMBRES %> <%= p.APELLIDOS %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Curso -->
      <div>
        <label class="block text-gray-700 mb-1">Curso</label>
        <select name="ID_CURSO" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-500">
          <% cursos.forEach(c => { %>
            <option value="<%= c.ID_CURSO %>" <%= formData?.ID_CURSO == c.ID_CURSO ? 'selected' : '' %>>
              <%= c.NOMBRE %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Fecha -->
      <div>
        <label class="block text-gray-700 mb-1">Fecha</label>
        <input type="date" name="FECHA" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-500" value="<%= formData?.FECHA || '' %>">
      </div>

      <!-- Estado -->
      <div>
        <label class="block text-gray-700 mb-1">Estado</label>
        <select name="ESTADO" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-500">
          <option value="A" <%= formData?.ESTADO === 'A' ? 'selected' : '' %>>Asistió</option>
          <option value="F" <%= formData?.ESTADO === 'F' ? 'selected' : '' %>>Faltó</option>
        </select>
      </div>

      <!-- Botones -->
      <div class="flex justify-end pt-4">
        <a href="/asistencias" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded mr-2 transition">
          Cancelar
        </a>
        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded transition">
          Registrar
        </button>
      </div>
    </form>
  </div>
</div>
