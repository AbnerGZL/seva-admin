<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Registrar Curso</h1>

  <form action="/cursos/crear" method="POST" class="max-w-md bg-white p-6 rounded-lg shadow">
    <% if (error) { %>
      <div class="text-red-500 mb-4"><%= error %></div>
    <% } %>

    <div class="mb-4">
      <label class="block mb-1">Profesor</label>
      <select name="ID_PROFESOR" required class="w-full px-3 py-2 border rounded">
        <% profesores.forEach(p => { %>
          <option value="<%= p.ID_PROFESOR %>" <%= formData?.ID_PROFESOR == p.ID_PROFESOR ? 'selected' : '' %>>
            <%= p.NOMBRES %> <%= p.APELLIDOS %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-4"><label>Código</label><input name="CODIGOCU" required value="<%= formData?.CODIGOCU || '' %>" class="w-full border px-3 py-2 rounded"></div>
    <div class="mb-4"><label>Nombre</label><input name="NOMBRE" required value="<%= formData?.NOMBRE || '' %>" class="w-full border px-3 py-2 rounded"></div>
    <div class="mb-4"><label>Descripción</label><input name="DESCRIPCION" required value="<%= formData?.DESCRIPCION || '' %>" class="w-full border px-3 py-2 rounded"></div>
    <div class="mb-4"><label>Créditos</label><input name="CREDITOS" type="number" required value="<%= formData?.CREDITOS || '' %>" class="w-full border px-3 py-2 rounded"></div>
    <div class="mb-4"><label>Duración</label><input name="DURACION" required value="<%= formData?.DURACION || '' %>" class="w-full border px-3 py-2 rounded"></div>
    <div class="mb-6"><label>Horas</label><input name="HORAS" type="number" required value="<%= formData?.HORAS || '' %>" class="w-full border px-3 py-2 rounded"></div>

    <div class="flex justify-end">
      <a href="/cursos" class="bg-gray-500 text-white px-4 py-2 rounded mr-2">Cancelar</a>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Crear</button>
    </div>
  </form>
</div>